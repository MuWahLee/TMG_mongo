.container
  h3.header Select my gear
  .table-responsive
    table.table.table-striped

      thead
        tr
          th.th_1 Name
          th.th_8 Category
          th.th_2 Weight (grams)
          th.th_3 Calories (calories)
          th.th_9 Image
          th.th_4
      tbody
        - @products.each do |product|
          tr
            td.td_1 = link_to product.product_name, product_url(product)
            td.td_8 = product.product_category
            td.td_2 = product.product_weight
            td.td_3 = product.product_calories
            / td.td_9 = image_tag product.product_image.url
            td.td_4
              / => link_to "more details", product_url(product)
              => link_to "edit", edit_product_url(product)
              | &frasl;
              =  link_to " delete", product_url(product), method: :delete, confirm: "Are you sure you want to delete the product ' #{product.product_name} '?"