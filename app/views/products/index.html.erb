<%= render partial: 'layouts/sidebar' %>

<h2 class="sub-header">All gear</h2>
<div class="table-responsive">
<div class="input-group"> <span class="input-group-addon">Filter</span>
    <input id="filter" type="text" class="form-control" placeholder="Filter">
</div>

  <table id="myTable" class="table table-striped filter tablesorter">
    <thead>
      <tr>
        <th class="col_cat">Category</th>
        <th class="col_name">Name</th>
        <th class="col_wt">Weight (grams)</th>
        <th class="col_cal">Calories (calories)</th>

      </tr>
    </thead>
    <tbody class="searchable"  id="table">
    <% @products.each do |product| %>
      <tr>
        <td class="col_cat"><%= product.product_category %></td>
        <td class="col_name"><%= link_to product.product_name, product_url(product) %></td>
        <td class="col_wt"><%= product.product_weight %></td>
        <td class="col_cal"><%= product.product_calories %></td>

      </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="2">Tally My Gear - Totals</th>
        <th colspan="1"></th>
        <th colspan="1"></th>
      </tr>
    </tfoot>
  </table>
</div>
