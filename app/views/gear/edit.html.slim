= form_for (current_user), url: gear_form_url, method: :patch do |f|

  div class="All_Products_list"
    h3.header List My Gear
    table.table.table-bordered
      / p Click on the checkboxes to select your gear
      / table class="table table-bordered"
      thead
        tr
          th.th_6 = "Include?"
          th.th_1 = "Product Name"
          th.th_2 = "Product Weight (in grams)"
          th.th_3 = "Product Calories (in calories)"

      tbody
        = f.collection_check_boxes :product_ids, @products, :id, :product_name do |b|
          - product = b.instance_variable_get(:@object)
          tr
            td.td_6 = b.check_box
            td.td_1 = product.product_name
            td.td_2 = product.product_weight
            td.td_3 = product.product_calories
    = f.submit "Save my list", class:"btn btn-warning"

